<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF80"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="180dp"
           android:layout_height="250dp"
           android:id="@+id/tab1_imgManga"
           android:paddingTop="14dp"
           android:paddingLeft="14dp"
           android:src="@drawable/pic_akame" />


       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:paddingTop="14dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_weight="2"

                       android:text="Tác giả" />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/tab1_txtTacgia"
                       android:layout_weight="1"
                       android:text="23"

                       android:gravity="center_horizontal"
                       />

               </LinearLayout>


               <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"

               android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp"
                           >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="2"

                   android:text="Số chương"

                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/tab1_txtSochuong"
                   android:layout_weight="1"
                   android:paddingLeft="30dp"
                   android:gravity="left"

                   android:text="1" />

                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="2"
                           android:gravity="center"

                           android:text="Trạng thái" />

                       <TextView
                           android:id="@+id/tab1_txtTrangthai"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"

                           android:gravity="center_horizontal"
                           android:text="qư2" />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               android:gravity="center"

                               android:text="Xếp hạng" />

                           <TextView
                               android:id="@+id/tab1_txtXephang"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center_horizontal"

                               android:layout_weight="1"
                               android:text="23" />


                       </LinearLayout>


                   </LinearLayout>

               </LinearLayout>
   </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab1_btnYeuthich"
        android:text="Thêm vào yêu thích"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector"
        android:onClick="onClickThem"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="20dp"
        android:text="Thể loại"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab1_txtTheloai"
        android:paddingLeft="14dp"

        android:paddingTop="10dp"
        android:text="Thể loại"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"

        android:text="Nội dung"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab1_txtNoidung"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"
        android:text="Thể loại"

        />
   </LinearLayout>

</ScrollView>



